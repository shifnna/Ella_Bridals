<body>
    <div class="container">
        <div class="menu-icon" id="menu-icon">&#9776; <!-- Hamburger icon --></div>
        <!-- Sidebar -->
        <div class="sidebar" id="sidebar" style="margin-top: 43px;">
            <ul>
                <li><a href="/admin/dashboard"><i class="fas fa-home"></i> Dashboard</a></li>
                <li><a href="/admin/customers"><i class="fas fa-users"></i> Customers</a></li>
                <li><a href="/admin/category"><i class="fas fa-list"></i> Category</a></li>
                <li><a href="/admin/brands"><i class="fas fa-star"></i> Brands</a></li>
                <li><a href="/admin/addProducts"><i class="fas fa-plus"></i> Add product</a></li>
                <li><a href="/admin/products"><i class="fas fa-box"></i> Products</a></li>
                <li><a href="/admin/coupon"><i class="fas fa-tags"></i> Coupon</a></li>
                <li><a href="/admin/banner"><i class="fas fa-image"></i> Banner</a></li>
                <li><a href="/admin/order"><i class="fas fa-receipt"></i> Orders</a></li> 
                <li><a href="/admin/offers"><i class="fas fa-gift"></i> Offers</a></li> 
                <li><a href="/admin/logout" id="logout-btn"><i class="fas fa-sign-out-alt"></i> Logout</a></li>              

            </ul>
        </div>

        <div class="main-content">
            <div class="top-header">
                <h2 style="margin-left: 40px;">Products Details</h2>
                <div class="profile">
                    <img src="/img/avatar2.png" alt="Profile Picture" class="profile-pic">
                </div>
            </div>

            <div class="dashboard">
                <div class="table-box">
                    <form action="/admin/products" method="get" class="d-inline">
                        <input style="width: 500px;height: 35px;" name="search" type="text" placeholder="Search orders...">
                        <button style="width: 90px;height: 38px;" type="submit">Search</button>
                    </form> 
                    <table>
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>Brand</th>
                                <th>Category</th>
                                <th>Sale Price</th>
                                <th>Offers %</th>
                                <th>Offer Price</th>
                                <th></th>
                                <th>Quantity</th>
                                <th>Action</th>
                                <th>Edit</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data.reverse().forEach((products, index) => { %>
                            <tr>
                                <td><%= products.productName %></td>
                                <td><%= products.brand %></td>
                                <td><%= products.category.name %></td>
                                <td><%= products.salePrice %></td>
                                <td><%= products.offerPercentage %>%</td>
                                <td><%= products.offerPrice %></td>
                                <td>
                                    <% if(products.offerPercentage === 0) { %>
                                    <button class="offer-button" onclick="addOffer('<%= products._id %>')">
                                        <a style="color: white;text-decoration: none;" href="#" class="text-white">Add Offer</a>
                                    </button>
                                    </td>
                                    <% } else { %>
                                    <button class="offer-button" onclick="removeOffer('<%= products._id %>')">
                                        <a style="color: white;text-decoration: none;" href="#" class="text-white">Remove Offer</a>
                                    </button>
                                    <% } %>
                                </td>
                                <td><%= products.quantity %></td>
                                <td>
                                    <% if(products.isBlocked === false) { %>
                                    <button class="btn btn-danger" style="width: 80px;background: rgb(56, 154, 79);height: 33px;border: none;border-radius: 5px;">
                                        <a href="/admin/blockProduct?id=<%= products._id %>" class="text-white" style="text-decoration: none;color: white;">Block</a>
                                    </button>
                                    <% } else { %> 
                                    <button class="btn btn-success" style="width: 80px;background: rgb(209, 69, 69);height: 33px;border: none;border-radius: 5px;">
                                        <a href="/admin/unblockProduct?id=<%= products._id %>" class="text-white" style="text-decoration: none;color: white;">Unblock</a>
                                    </button>
                                    <% } %>
                                </td>
                                <td>
                                    <button class="btn btn-success" style="width: 80px;background: rgb(27, 81, 134);height: 33px;border: none;border-radius: 5px;">
                                        <a href="/admin/editProduct?id=<%= products._id %>" class="text-white" style="text-decoration: none;color: white;">Edit</a>
                                    </button>
                                </td>
                            </tr>
                            <% }); %> <!-- Closing the forEach loop -->
                        </tbody>                        
                    </table>
                     <!-- Pagination Section -->
                     <div class="pagination">
                        <% for (let i = 1; i <= totalPages; i++) { %>
                          <li class="page-item <%= (i === parseInt(currentPage)) ? 'active' : '' %>">
                            <a class="page-link" href="?page=<%= i %>&search=<%= search %>"><%= i %></a>
                          </li>
                        <% } %>
                      </div>
                </div>
            
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
         // jQuery to toggle the sidebar
         $(document).ready(function() {
            $("#menu-icon").click(function() {
                $("#sidebar").toggleClass("active");
            });

            // Close sidebar when clicking outside of it
            $(document).click(function(event) {
                if (!$(event.target).closest('#sidebar, #menu-icon').length) {
                    $("#sidebar").removeClass("active");
                }
            });
        });


    async function addOffer(productId) {
    const { value: amount } = await Swal.fire({
        title: "Offer in percentage",
        input: "number",
        inputLabel: "Percentage",
        inputPlaceholder: "%",
        inputAttributes: {
            min: 0, // Ensure that negative percentages cannot be entered
            max: 100, // Ensure that percentages do not exceed 100
        },
    });

    if (amount !== null) {
        $.ajax({
            url: "/admin/addProductOffer",
            method: "post",
            data: {
                percentage: amount,
                productId: productId,
            },
            success: (response) => {
                if (response.status === true) {
                    location.reload();
                    Swal.fire("Offer added", "The offer has been applied", "success");
                } else {
                    Swal.fire("Failed", response.message, "error");
                }
            },
            error: (xhr, status, error) => {
                console.error("AJAX error:", error);
                Swal.fire("Error", "An error occurred while adding the offer.", "error");
            }
        });
    }
}







