<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Womenz Store</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            height: 100%;
        }
        .container {
            display: flex;
            min-height: 100vh;
        }
        .sidebar {
            background-color: #253234;
            min-height: 100vh;
            width: 250px;
        }
        .sidebar ul {
            list-style-type: none;
            padding: 0;
        }
        .sidebar ul li {
            margin: 0;
        }
        .sidebar ul li a {
            display: flex;
            align-items: center;
            padding: 15px;
            text-decoration: none;
            color: #e7dddd;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }
        .sidebar ul li a:hover {
            background-color: #6f898d;
            color: white;
            text-decoration: none;
        }
        .sidebar ul li a i {
            margin-right: 10px;
        }
        .main-content {
            flex: 1;
            padding: 20px;
            background-color: #fff;
        }
        .top-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        .breadcrumb {
            font-size: 18px;
        }
        .profile-pic {
            width: 40px;
            height: 40px;
            border-radius: 50%;
        }
        .dashboard {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .table-box {
            margin-top: 20px;
        }
        .search-add-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        .search-add-container .add-category-btn {
            background-color: #28a745;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            text-decoration: none;
        }
        .search-add-container .add-category-btn:hover {
            background-color: #218838;
        }
        .search-add-container input {
            width: 60%;
            padding: 10px;
            box-sizing: border-box;
        }
        .search-add-container button {
            display: inline-block;
            padding: 10px;
            border: none;
            background-color: #3498db;
            color: white;
            cursor: pointer;
            border-radius: 5px;
        }
        .search-add-container button:hover {
            background-color: #2980b9;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: left;
        }
        td{
            font-size: medium;
        }
        th {
            background-color: #f2f2f2;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        }
        .action-buttons button, .edit-button, .offer-button {
            background-color: #3498db;
            color: white;
            border: none;
            padding: 8px 12px;
            cursor: pointer;
            border-radius: 5px;
            margin-right: 5px;
            font-size: 14px;
        }
        .action-buttons button:hover, .edit-button:hover, .offer-button:hover {
            background-color: #2980b9;
        }
        .remove-button {
            background-color: #e74c3c;
        }
        .remove-button:hover {
            background-color: #c0392b;
        }
        .block-button {
            background-color: #e67e22;
            
        }
        .block-button:hover {
            background-color: #d35400;
        }
        .unblock-button {
            background-color: #2ecc71;
        }
        .unblock-button:hover {
            background-color: #27ae60;
        }
        .offer-button {
            background-color: #28465b;
        }
        .offer-button:hover {
            background-color: #e67e22;
        }
        .edit-button {
            background-color: #3498db;
        }
        .edit-button:hover {
            background-color: #2980b9;
        }
        .pagination {
            display: flex;
            justify-content: center;
            margin-top: 20px;
            padding: 0; 
            list-style: none;
        }
        .page-item {
            margin: 0 5px;
            list-style: none;
            margin-right: 70px;
        }
        .page-link {
            padding: 10px 15px;
            text-decoration: none;
            color: #007bff;
            border: 1px solid #ddd;
            border-radius: 4px;
            background-color: #fff;
        }
        .page-link:hover {
            background-color: #e9ecef;
        }
        .active .page-link {
            background-color: #007bff;
            color: #fff;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="sidebar">
            <h1 style="margin-left: 18px;color: rgb(226, 222, 222);">Womenz Store</h1>
            <ul>
                <li><a href="/admin/dashboard"><i class="fas fa-home"></i> Dashboard</a></li>
                <li><a href="/admin/customers"><i class="fas fa-users"></i> Customers</a></li>
                <li><a href="/admin/category"><i class="fas fa-list"></i> Category</a></li>
                <li><a href="/admin/brands"><i class="fas fa-star"></i> Brands</a></li>
                <li><a href="#"><i class="fas fa-plus"></i> Add product</a></li>
                <li><a href="#"><i class="fas fa-box"></i> Products</a></li>
                <li><a href="#"><i class="fas fa-tags"></i> Coupon</a></li>
                <li><a href="#"><i class="fas fa-image"></i> Banner</a></li>
                <li><a href="#"><i class="fas fa-shopping-cart"></i> Orders</a></li>
            </ul>
        </div>

        <div class="main-content">
            <div class="top-header">
                <h2>Products Details</h2>
                <div class="profile">
                    <img src="/img/avatar2.png" alt="Profile Picture" class="profile-pic">
                </div>
            </div>

            <div class="dashboard">
                <div class="table-box">
                    <table>
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>Brand</th>
                                <th>Category</th>
                                <th>Sale Price</th>
                                <th>Offers %</th>
                                <th>Offer Price</th>
                                <th></th>
                                <th>Quantity</th>
                                <th>Action</th>
                                <th>Edit</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data.forEach(function(products) { %>
                            <tr>
                                <td><%=products.productName%></td>
                                <td><%=products.brand%></td>
                                <td><%=products.category.name%></td>
                                <td><%=products.salePrice%></td>
                                <td><%=products.productOffer%>%</td>
                                <td>offerPrice</td>
                                <td>
                                    <% if(products.productOffer===0){ %>
                                <button class="offer-button" onclick="addOffer('<%=products._id%>')">
                                    <a style="color: white;text-decoration: none;" href="#" class="text-white">Add Offer</a>
                                </button></td>
                                <% } else { %>
                                <button class="offer-button" onclick="removeOffer('<%=products._id %>')">
                                    <a style="color: white;text-decoration: none;" href="#" class="text-white">Remove Offer</a>
                                </button>
                                <% } %>

                                <td><%=products.quantity%></td>
                                <td>
                                    <%if(products.isBlocked=== false){%>
                                        <button class="btn btn-danger" style="width: 80px;background: rgb(56, 154, 79);height: 33px;border: none;border-radius: 5px;">
                                        <a href="/admin/blockProduct?id=<%=products._id%>" class="text-white" style="text-decoration: none;color: white;">Block</a>
                                    </button>
                                    <%}else{%> 
                                        <button class="btn btn-success" style="width: 80px;background: rgb(209, 69, 69);height: 33px;border: none;border-radius: 5px;">
                                    <a href="/admin/unblockProduct?id=<%=products._id%>" class="text-white" style="text-decoration: none;color: white;">Unblock</a>
                                    </button>
                                    <%}%>
                                </td>
                                <td>
                                    <button class="btn btn-success" style="width: 80px;background: rgb(27, 81, 134);height: 33px;border: none;border-radius: 5px;">
                                        <a href="/admin/editProduct?id=<%=products._id%>" class="text-white" style="text-decoration: none;color: white;">Edit</a>
                                    </button>
                                </td>
                            </tr>
                            <% }); %>
                            <!-- Add more rows as needed -->
                        </tbody>
                    </table>
                </div>
            
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
    async function addOffer(productId) {
    const { value: amount } = await Swal.fire({
        title: "Offer in percentage",
        input: "number",
        inputLabel: "Percentage",
        inputPlaceholder: "%",
        inputAttributes: {
            min: 0, // Ensure that negative percentages cannot be entered
            max: 100, // Ensure that percentages do not exceed 100
        },
    });

    if (amount !== null) {
        $.ajax({
            url: "/admin/addProductOffer",
            method: "post",
            data: {
                percentage: amount,
                productId: productId,
            },
            success: (response) => {
                if (response.status === true) {
                    location.reload();
                    Swal.fire("Offer added", "The offer has been applied", "success");
                } else {
                    Swal.fire("Failed", response.message, "error");
                }
            },
        });
    }
}






async function removeOffer(productId){
    try {
        Swal.fire({
        title:"Remve offer",
        text:"Are you sure you want to remove this offer",
        icon:"warning",
        showCancelButton:true,
        confirmButtonColor:"#3085d6",
        cancelButtonColor:'#d33',
        confirmButtonText:"yes,remove it",
        timer:5000,
        timerProgressBar:true,

    }).then(async (result)=>{
        if(result.isConfirmed){
            $.ajax({
                url:"/admin/removeProductOffer",
        method:"post",
        data:{
            productId:productId,
        },
        success:(response)=>{
            if(response.status===true){
                location.reload();
                Swal.fire("Offer added","The offer has been removed","success")
            }else if(response.status===false){
                Swal.fire("failed")
            }else{
                alert("Failed")
            }
        }
            })
        }
    })
    } catch (error) {
        console.error(error);
        
    }
}


    </script>
</body>
</html>
