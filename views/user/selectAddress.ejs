            align-items: center;
            margin-bottom: 30px;
        }

        .step {
            display: flex;
            align-items: center;
            padding: 0 10px;
        }

        .step .circle {
            height: 30px;
            width: 30px;
            border-radius: 50%;
            background-color: #ca1515;
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
            font-weight: bold;
        }

        .step .line {
            width: 50px;
            height: 3px;
            background-color: #ccc;
            margin: 0 5px;
        }

        .step.active .line {
            background-color: #ca1515;
        }

        .step.active .circle {
            background-color: #ca1515;
        }

        .step.completed .circle {
            background-color: #ca1515;
        }

        .address-card {
            border: 1px solid #ebebeb;
            border-radius: 8px;
            padding: 20px;
            background-color: #fff;
            margin-bottom: 20px;
        }

        .address-card .btn {
