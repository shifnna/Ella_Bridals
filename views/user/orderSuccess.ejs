<%-include("../../views/partials/userHeader")%>
<style>
    .container {
    max-width: 800px;
    margin: 0 auto;
}

body {
            font-family: Arial, sans-serif;
            background-color: white;
        }

        h1 {
            font-size: 2rem;
            font-weight: bold;
            text-align: center;
            margin-bottom: 10px;
        }

        p {
            text-align: center;
            color: #6c757d;
        }

        .stepper {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 55px;
        }

        .step {
            display: flex;
            align-items: center;
            /* padding: 0 10px; */
            margin: -14px;
        }

        .step .circle {
            height: 30px;
            width: 30px;
            border-radius: 50%;
            background:rgb(187, 13, 13);
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
            font-weight: bold;
        }

        .step .line {
            width: 50px;
            height: 3px;
            background-color: #ccc;
            margin: 0 5px;
        }

        .step.active .line {
            background:rgb(187, 13, 13);
        }

        .step.active .circle {
            background:rgb(187, 13, 13);
        }

        .step.completed .circle {
            background:rgb(187, 13, 13);
        }
        @media (max-width: 768px){
            .h2, h2{
                font-size: 18px;
            }
        }
</style>
<body>
 <div class="container">
        <!-- Stepper -->
        <div class="stepper">
            <div class="step completed">
                <div class="circle">✓</div>
                <span>Sign Up</span>
                <div class="line active"></div>
            </div>
            <div class="step completed">
                <div class="circle">✓</div>
                <span>Address</span>
                <div class="line active"></div>
            </div>
            <div class="step active">
                <div class="circle">✓</div>
                <span>Payment</span>
            </div>
        </div>

        <div style="text-align: center;" class="checkout__order">
            <img style="width: 170px; height: 160px;" src="/imgs/success.png" alt="">
            <h2>Your Order is Successfully placed</h2>
            <br>
            <a style="text-decoration: none;" href="/shop">
                <button style="background-color: #000000; color: #ebebeb; height: 40px; border-radius: 5px;" id="rzp-button">Continue Shopping</button>
            </a>
            <a href="/orders">
                <button style="background-color: #000000; color: #ebebeb; height: 40px; border-radius: 5px;" id="rzp-button">View Orders</button>
            </a>
        </div>
    </div>

<!-- Js Plugins -->
<script src="js/jquery-3.3.1.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/jquery.magnific-popup.min.js"></script>
<script src="js/jquery-ui.min.js"></script>
<script src="js/mixitup.min.js"></script>
<script src="js/jquery.countdown.min.js"></script>
<script src="js/jquery.slicknav.js"></script>
<script src="js/owl.carousel.min.js"></script>
<script src="js/jquery.nicescroll.min.js"></script>
<script src="js/main.js"></script>
</body>

</html>
