    <!-- Shop Section Begin -->
<section>
    <div style="margin: 50px;">
        <div class="row">
            <div class="col-lg-3 col-md-3" style="max-width: 20%;">
                <div class="shop__sidebar">
                    <div class="sidebar__categories">
                        <div class="section-title">
                            <h4>Categories</h4>
                        </div>
                        <div class="categories__accordion">
                            <div class="accordion" id="accordionExample">
                                
                                <div class="card">
                                    <div class="card-heading ">
                                        <a href="/shop">All</a>
                                    </div>
                                </div>
                                <% categories.forEach(function(category) { %>
                                    <div class="card">
                                        <div class="card-heading ">
                                            <a href="/shop?category=<%= category._id %>"><%= category.name %></a>
                                        </div>
                                    </div>
                                    <% }) %>
                            </div>
                        </div>
                    </div>
                    <div class="sidebar__filter">
                        <div class="section-title">
                            <h4>Filter</h4>
                        </div>
                        <div class="filter-dropdown">
                            <select  class="form-select card-heading" aria-label="Filter by" id="productFilter" style="width: 233px;height: 48px; border: none; border-top: 1px solid #f2f2f2;border-bottom: 1px solid #f2f2f2;">
                                <option value="" selected disabled>Filter by</option>
                                <option value="price-low-high">Price: Low to High</option>
                                <option value="price-high-low">Price: High to Low</option>
                                <option value="name-a-z">Product Name: A to Z</option>
                                <option value="name-z-a">Product Name: Z to A</option>
                                <option value="new-arrivals">New Arrivals</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-9 col-md-9">
                <!-- Product Grid -->
                <div class="row product-row" id="productList">
                    <% products.forEach(function(product) { %>
                    <div class="col-lg-3 col-md-6 product-item" data-sale-price="<%= product.salePrice %>" data-product-name="<%= product.productName %>" data-created-at="<%= new Date(product.createdAt).getTime() %>">
                        <div class="product__item">
                            <div class="product__item__pic set-bg" data-setbg="/imgs/re-images/<%= product.productImage[0] %>">
                                <% if (product.quantity <= 0) { %>
                                <div class="label stockout stockblue">Out Of Stock</div>
                                <% } else if (product.isBlocked === true) { %>
                                <div class="label stockout stockblue">Unavailable</div>
                                <% } %>
                                <a href="/productdetails/<%= product._id %>">
                                    <ul class="product__hover">
                                        <li><a href="/imgs/re-images/<%= product.productImage[0] %>" class="image-popup"><span class="arrow_expand"></span></a></li>
                                        <li><a href="/addwishlist/<%= product._id %>"><span class="icon_heart_alt  <% if (wishlist.includes(product._id.toString())) { %> wishlist-icon <% } %>"></span></a></li>
                                        <li><a href="/addToCart/<%= product._id %>/10"><span class="icon_bag_alt"></span></a></li>
                                    </ul>
                                </a>
                            </div>
                            <div class="product__item__text">
                                <% if (product.quantity <= 0 || product.isBlocked == true) { %>
                                <% if (message && message !== 'none') { %>
                                <div style="font-size: small; color: red;"><%= message %></div>
                                <% } %>
                                <% } %>
                                <h6><a href="#"><%= product.productName %></a></h6>
                                <div class="rating">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </div>
                                <% if (product.offerPrice && product.offerPrice > 0) { %>
                                <div class="price-container" style="display: flex; align-items: center;">
                                    <div class="sale-price" style="text-decoration: line-through; margin-right: 10px; margin-left: 25%; font-weight: 600; color: dimgray;">
                                        ₹ <%= product.salePrice %>
                                    </div>
                                    <div class="offer-price" style="color: black; text-align: center; font-weight: 600;">
                                        ₹ <%= product.offerPrice %>
                                    </div>
                                </div>
                                <% } else { %>
                                <div class="product__price">₹ <%= product.salePrice %></div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </div>
<!-- Pagination Section -->
<div class="pagination" style="text-align: center; margin-top: 20px;">
    <div>
        <% if (currentPage > 1) { %>
            <a href="/shop?page=<%= currentPage - 1 %>" style="margin-right: 10px; color: black; text-decoration: none; font-size: 20px;">&lt;<small>Previous</small> </a> <!-- Left Arrow -->
        <% } %>

        <% for (let i = 1; i <= totalPages; i++) { %>
            <a href="/shop?page=<%= i %>" style="display: inline-block; margin: 0 5px; color: <%= currentPage === i ? 'black' : 'gray' %>; text-decoration: none; font-weight: <%= currentPage === i ? 'bold' : 'normal' %>; cursor: pointer;"><%= i %></a>
        <% } %>

        <% if (currentPage < totalPages) { %>
            <a href="/shop?page=<%= currentPage + 1 %>" style="margin-left: 10px; color: black; text-decoration: none; font-size: 20px;"> <small>Next</small>&gt;</a> <!-- Right Arrow -->
        <% } %>
    </div>
</div>


            </div>
        </div>
    </div>
