<section>
    <div class="hy">
        <div class="row">
            <div class="shop__sidebar">
                <div class="sidebar__categories">
                    <div class="section-title">
                        <h4>Categories</h4>
                    </div>
                    <div class="categories__dropdown">
                        <form action="/shop" method="get">
