<style>
    .banner {
        position: relative; /* Ensures correct positioning */
        height: 500px;     /* Set a height for the banner */
        background-size: cover; /* Make the background cover the section */
        background-position: center; /* Center the background */
        margin: 50px;
    }

    .banner__text {
        position: absolute; /* Position text over the banner */
        bottom: 20px;      /* Position text from bottom */
        left: 20px;        /* Position text from left */
        color: white;      /* Adjust text color */
    }

    /* Carousel Item */
    .owl-carousel .item {
        height: 100%;      /* Ensure full height for items */
        transition: opacity 1s ease-in-out; /* Smooth transition for fading */
    }

    /* Navigation buttons */
    .owl-nav {
        position: absolute; /* Position buttons absolutely */
        top: 50%; /* Center vertically */
        width: 100%; /* Full width for centering */
        transform: translateY(-50%); /* Adjust for vertical centering */
        display: flex; /* Use flexbox for alignment */
        justify-content: space-between; /* Space out buttons */
        z-index: 10; /* Ensure buttons are above other elements */
        border: none;
    }


    .owl-nav .owl-prev {
    background: rgba(169, 169, 169, 0.4); /* Light gray with more fade effect */
    width: 40px; /* Set a width for the button */
    height: 40px; /* Set a height for the button */
    border-radius: 50%; /* Make it round */
    display: flex; /* Use flexbox for centering */
    align-items: center; /* Center vertically */
    justify-content: center; /* Center horizontally */
    position: relative; /* For positioning the arrow */
    border: none; /* Remove any border */
    margin-left: 5%;
}

/* Increase size of the arrow */
.owl-nav .owl-prev:before {
    content: '';
    width: 0;
    height: 0;
    border-width: 10px 10px 10px 0; /* Adjust the size of the triangle */
    border-color: transparent rgba(169, 169, 169, 0.4) transparent transparent; /* Same faded gray color for the triangle */
    position: absolute; /* Position it within the button */
    left: 10px; /* Adjust to center */
    top: 50%; /* Center vertically */
    transform: translateY(-50%); /* Correct vertical positioning */
}

.owl-nav .owl-next {
    background: rgba(169, 169, 169, 0.4); /* Light gray with more fade effect */
    width: 40px; /* Set a width for the button */
    height: 40px; /* Set a height for the button */
    border-radius: 50%; /* Make it round */
    display: flex; /* Use flexbox for centering */
    align-items: center; /* Center vertically */
    justify-content: center; /* Center horizontally */
    position: relative; /* For positioning the arrow */
    border: none; /* Remove any border */
    margin-right: 5%;
}

/* Increase size of the arrow for next button */
.owl-nav .owl-next:before {
    content: '';
    width: 0;
    height: 0;
    border-width: 10px 0 10px 10px; /* Adjust the size of the triangle */
    border-color: transparent transparent transparent rgba(169, 169, 169, 0.4); /* Same faded gray color for the triangle */
    position: absolute; /* Position it within the button */
    right: 10px; /* Adjust to center */
    top: 50%; /* Center vertically */
    transform: translateY(-50%); /* Correct vertical positioning */
}
/* Hover effect */
.owl-nav .owl-prev:hover, .owl-nav .owl-next:hover {
    background: rgba(169, 169, 169, 0.6); /* Slightly darker gray on hover */
    outline: none; /* Remove outline for focus state */
}

/* Active effect */
.owl-nav .owl-prev:active, .owl-nav .owl-next:active {
    background: rgba(169, 169, 169, 0.8); /* Even darker gray when clicked */
    outline: none; /* Remove outline for focus state */
}
    /* Dot indicators */
    .owl-dots {
        position: absolute; /* Position dots absolutely */
        bottom: 10px; /* Adjust vertical position */
        left: 50%; /* Center horizontally */
        transform: translateX(-50%); /* Center dots */
        display: flex; /* Use flexbox for alignment */
        gap: 10px; /* Space between dots */
    }

    .owl-dots .owl-dot {
        width: 12px; /* Width of each dot */
        height: 12px; /* Height of each dot */
        background: rgba(255, 255, 255, 0.5); /* Inactive dot color */
        border-radius: 50%; /* Round dots */
        cursor: pointer; /* Pointer cursor */
        transition: background 0.3s; /* Smooth transition for hover effect */
        display: block; /* Ensure dots are block elements */
        border: none;
    }

    .owl-dots .owl-dot.active {
        background: rgba(255, 255, 255, 1); /* Active dot color */
        border: none;
    }
    /* Hide the mobile search bar by default */
