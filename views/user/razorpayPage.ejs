<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Choose Payment Method</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="css/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="css/magnific-popup.css" type="text/css">
    <link rel="stylesheet" href="css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="css/style.css" type="text/css">
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>

    <style>
        
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
        }

        .container {
            margin-top: 30px;
        }

        h1 {
            font-size: 2rem;
            font-weight: bold;
            text-align: center;
            margin-bottom: 10px;
        }

        p {
            text-align: center;
            color: #e5b4cc;
        }

        /* Stepper CSS */
        .stepper {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 30px;
        }

        .step {
            display: flex;
            align-items: center;
            padding: 0 10px;
        }

        .step .circle {
            height: 30px;
            width: 30px;
            border-radius: 50%;
            background-color: #ff007f;
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
            font-weight: bold;
        }

        .step .line {
            width: 50px;
            height: 3px;
            background-color: #cccccc;
            margin: 0 5px;
        }

        .step.active .line {
            background-color: #ff007f;
        }

        .step.active .circle {
            background-color: #ff007f;
        }

        .step.completed .circle {
            background-color: #ff007f;
        }

        .payment-method-card {
            border: 1px solid #ebebeb;
            border-radius: 8px;
            padding: 20px;
            background-color: #fff;
            margin-bottom: 20px;
        }

        .payment-method-card input[type="radio"] {
            margin-right: 10px;
        }

        .btn-primary {
            background-color: #ff007f;
            border-color: #ff007f;
        }

        .btn-primary:hover {
            background-color: #e6006c;
            border-color: #e6006c;
        }

        /* Custom style for SweetAlert2 success icon */
        .swal2-success .swal2-success-ring {
            border-color: #ff007f !important; /* Pink color for the outer ring */
        }

        .swal2-success .swal2-success-line {
            background-color: #ff007f !important; /* Pink color for the tick mark */
        }

        /* Preloder */

#preloder {
	position: fixed;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
	z-index: 999999;
	background: #ffffff;
}

.loader {
	width: 40px;
	height: 40px;
	position: absolute;
	top: 50%;
	left: 50%;
	margin-top: -13px;
	margin-left: -13px;
	border-radius: 60px;
	animation: loader 0.8s linear infinite;
	-webkit-animation: loader 0.8s linear infinite;
}


@keyframes loader {
	0% {
		-webkit-transform: rotate(0deg);
		transform: rotate(0deg);
		border: 4px solid #f44336;
		border-left-color: transparent;
	}
	50% {
		-webkit-transform: rotate(180deg);
		transform: rotate(180deg);
		border: 4px solid #673ab7;
		border-left-color: transparent;
	}
	100% {
		-webkit-transform: rotate(360deg);
		transform: rotate(360deg);
		border: 4px solid #f44336;
		border-left-color: transparent;
	}
}

@-webkit-keyframes loader {
	0% {
		-webkit-transform: rotate(0deg);
		border: 4px solid #f44336;
		border-left-color: transparent;
	}
	50% {
		-webkit-transform: rotate(180deg);
		border: 4px solid #673ab7;
		border-left-color: transparent;
	}
	100% {
		-webkit-transform: rotate(360deg);
		border: 4px solid #f44336;
		border-left-color: transparent;
	}
}
    </style>
    <!-- SweetAlert2 CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.7.9/sweetalert2.min.css">
</head>
<body>
<!-- Page Preloder -->
<div id="preloder">
    <div class="loader"></div>
</div>

<div class="container">
    <!-- Stepper -->
    <div class="stepper">
        <div class="step completed">
            <div class="circle">✓</div>
            <span>Sign Up</span>
            <div class="line active"></div>
        </div>
        <div class="step completed">
            <div class="circle">✓</div>
            <span>Address</span>
            <div class="line active"></div>
        </div>
        <div class="step active">
            <div class="circle">3</div>
            <span>Payment</span>
        </div>
    </div>

    
    <div style="text-align: center; padding: 60px; width: 500px; margin-left: 310px; background: #ffffff; border-color: #000000; border-radius: 5px; margin-top: 110px;" class="checkout__order">
        <h2>Total Amount: ₹<%= amount %></h2>
        <br>
        <div style="display: flex; flex-direction: column; align-items: center;">
            <button style="background-color: #000000; color: #ebebeb; height: 40px; border-radius: 5px; display: block;" id="rzp-button" class="pay-button">Pay Now</button>
            <button style="background-color: #000000; color: #ebebeb; height: 40px; border-radius: 5px; display: none; margin-top: 10px;" id="rzp-button2" class="try-again-button">Try Again</button>
        </div>
    </div>
    
    <!-- SweetAlert2 JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.7.9/sweetalert2.all.min.js"></script>
    <!-- Bootstrap JS CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        let tryAgainButton = document.querySelector('.try-again-button');
        let payButton = document.querySelector('.pay-button');
    
        document.getElementById('rzp-button').onclick = function (e) {
            tryAgainButton.style.display = 'block';
            payButton.style.display = 'none';         
             
            var options = {
                "key": "<%= key_id %>",
                "amount": "<%= amount * 100 %>",
                "currency": "INR",
                "name": "womenz store",
                "description": "Order Payment",
                "order_id": "<%= order_id %>",
                "handler": function (response) {
                    fetch('/verifyPayment', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            razorpay_order_id: response.razorpay_order_id,
                            razorpay_payment_id: response.razorpay_payment_id,
                            razorpay_signature: response.razorpay_signature
                        })
                    })
                    .then(verifyResponse => {
                        if (verifyResponse.ok) {
                            window.location.href = "/orderSuccess";
                        } else {
                            return verifyResponse.json().then(verifyData => {
                                console.error('Payment verification failed:', verifyData.message);
                            });
                        }
                    })
                    .catch(error => {
                        console.error('Error during payment verification:', error);
                    });
                },
                "prefill": {
                    "name": "<%= user.name %>",
                    "email": "<%= user.email %>",
                    "contact": "<%= user.phone %>"
                },
                "theme": {
                    "color": "#ff007f"
                }
            };
            var rzp = new Razorpay(options);
            rzp.open();
            e.preventDefault();
        }

        // for try again button

        document.getElementById('rzp-button2').onclick = function (e) {
            tryAgainButton.style.display = 'block';
            payButton.style.display = 'none';         
             
            var options = {
                "key": "<%= key_id %>",
                "amount": "<%= amount * 100 %>",
                "currency": "INR",
                "name": "Womenz store",
                "description": "Order Payment",
                "order_id": "<%= order_id %>",
                "handler": function (response) {
                    fetch('/verifyPayment', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            razorpay_order_id: response.razorpay_order_id,
                            razorpay_payment_id: response.razorpay_payment_id,
                            razorpay_signature: response.razorpay_signature
                        })
                    })
                    .then(verifyResponse => {
                        if (verifyResponse.ok) {
                            window.location.href = "/orderSuccess";
                        } else {
                            return verifyResponse.json().then(verifyData => {
                                console.error('Payment verification failed:', verifyData.message);
                            });
                        }
                    })
                    .catch(error => {
                        console.error('Error during payment verification:', error);
                    });
                },
                "prefill": {
                    "name": "<%= user.name %>",
                    "email": "<%= user.email %>",
                    "contact": "<%= user.phone %>"
                },
                "theme": {
                    "color": "#ff007f"
                }
            };
            var rzp = new Razorpay(options);
            rzp.open();
            e.preventDefault();
        }
    </script>
    <!-- Js Plugins -->
<script src="js/jquery-3.3.1.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/jquery.magnific-popup.min.js"></script>
