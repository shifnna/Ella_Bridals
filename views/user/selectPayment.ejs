    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
        }

        .container {
            margin-top: 30px;
        }

        h1 {
            font-size: 2rem;
            font-weight: bold;
            text-align: center;
            margin-bottom: 10px;
        }

        p {
            text-align: center;
            color: #6c757d;
        }

        .stepper {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 30px;
        }

        .step {
            display: flex;
            align-items: center;
            padding: 0 10px;
        }

        .step .circle {
            height: 30px;
            width: 30px;
            border-radius: 50%;
            background-color: #ff007f;
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
            font-weight: bold;
        }

        .step .line {
            width: 50px;
            height: 3px;
            background-color: #ccc;
            margin: 0 5px;
        }

        .step.active .line {
            background-color: #ff007f;
        }

        .step.active .circle {
            background-color: #ff007f;
        }

        .step.completed .circle {
            background-color: #ff007f;
        }

        .payment-method-card {
            border: 1px solid #ebebeb;
            border-radius: 8px;
            padding: 20px;
            background-color: #fff;
            margin-bottom: 20px;
        }

        .payment-method-card input[type="radio"] {
            margin-right: 10px;
        }

        .btn-primary {
    background-color: #e6a4c0 !important; /* Light Pink when button is enabled */
    border-color: #e4adc5 !important;
    color: #fff !important;
    transition: background-color 0.3s, border-color 0.3s; /* Smooth transition */
}

.btn-primary:disabled {
    background-color: #e6a4c0  !important; /* Gray when button is disabled */
    border-color: #dc94c7 !important;
    color: #fff !important; /* Ensures text color is white */
    cursor: not-allowed !important; /* Show that button is not clickable */
    opacity: 1 !important; /* Ensure visibility */
}

.btn-primary.active {
    background-color: #ff007f !important; /* Dark Pink when button is active */
    border-color: #ff007f !important;
    color: #fff !important;
}


 
